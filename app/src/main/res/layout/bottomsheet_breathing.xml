<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottomsheet"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_handle"/>

        <!-- Title -->
        <TextView
            android:id="@+id/tvBreathingTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Breathing Exercise"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Take a moment to relax"
            android:layout_marginTop="6dp"
            android:textColor="@color/black"/>

        <!-- Breathing Visual -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="16dp"
            android:gravity="center_horizontal">

            <View
                android:id="@+id/breathingCircle"
                android:layout_width="160dp"
                android:layout_height="160dp"

                android:background="@drawable/bg_wellness_circle"
                android:layout_gravity="center"
                />
        </FrameLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/bg_step_card"
            android:layout_marginTop="16dp">

            <!-- Steps TextViews go here -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Inhale slowly for 4 seconds"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2. Hold your breath for 2 seconds"
                android:layout_marginTop="8dp"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3. Exhale gently for 6 seconds"
                android:layout_marginTop="8dp"
                android:textColor="@color/black"/>

        </LinearLayout>



    </LinearLayout>

</ScrollView>
